{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "devcontainer",
    "github-actions"
  ],
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ“¦ Renovate Dependency Dashboard",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "esphome-version:\\s*\\n(?:[ \\t]*- stable\\n)?(?<depValues>([ \\t]*- (?<currentValue>\\d+\\.\\d+\\.\\d+)\\n)+)"
      ],
      "depNameTemplate": "ghcr.io/esphome/esphome",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.github/workflows/.+\\.ya?ml$"],
      "matchStrings": [
        "esphome-version:\\s*[\"']?(?<currentValue>[^\\s\"']+)[\"']?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "esphome/esphome",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "esphome-version:\\s+(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "ghcr.io/esphome/esphome",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/esphome/esphome"
      ],
      "matchDatasources": [
        "docker"
      ],
      "groupName": "ESPHome Versionsupdate",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}

